@{
    ViewData["Title"] = "All Possible Completers";
}

<h1>All possible completers</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Alias</th>
            <th>Organization</th>
            <th>Times Attended</th>
            <th>Last Time Attended</th>
            <th>Skipped</th>
            <th>OOF</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var Employee in ViewBag.Employees)
    {
        <tr>
            <td>@Employee.FirstName</td>
            <td>@Employee.LastName</td>
            <td>@Employee.Alias</td>
            @if(@Employee.IsCela == 1)
            {
                <td>CELA</td>
            }
            else if(@Employee.IsCelaVendor == 1)
            {
                <td>Cela Vendor</td>
            }
            else
            {
                <td>Robert Half</td>
            }
            <td>@Employee.TimesAttended</td>
            <td>@Employee.LastAttended.ToString("MMMMM dd/yyyy")</td>
            @if(@Employee.Skipped == 1)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
            @if(@Employee.OOF == 1)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
            <td>
                <form action="Attended" method="POST">
                    <input type="hidden" name="Id" value="@Employee.Id">
                    <input type="submit" value="Attended">
                </form>
                <form action="Skipped" method="POST">
                    <input type="hidden" name="Id" value="@Employee.Id">
                    <input type="submit" value="Skipped">
                </form>
                <form action="OOF" method="POST">
                    <input type="hidden" name="Id" value="@Employee.Id">
                    <input type="submit" value="OOF">
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>